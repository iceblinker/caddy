{
    # Global Options
    email your-email@example.com
    # Graceful reload duration
    grace_period 5s
    
    # Global Logging (JSON for parsing tools)
    log {
        format json
        output stdout
        level INFO
    }
}

# ------------------------------------------------------------------------------
# SITES (Fully Expanded / No Imports for Max Robustness)
# ------------------------------------------------------------------------------

# Example: Mediaflow Proxy
# key request: mediaflow.your-domain.com
mediaflow.localhost, localhost:8080 {
    # Security Headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=()"
        Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline'; frame-ancestors 'self'; object-src 'none';"
        -Server
        -X-Powered-By
    }

    # Performance
    @compressible {
        path *.js *.css *.html *.json *.xml *.txt *.svg *.md *.yaml *.yml
    }
    encode zstd gzip @compressible
    
    @static {
        file
        path *.ico *.css *.js *.gif *.jpg *.jpeg *.png *.svg *.woff *.woff2
    }
    header @static Cache-Control "public, max-age=31536000"

    # Common Log
    log {
        format json
        output stdout
    }

    reverse_proxy mediaflow-proxy:8888 {
        header_up X-Real-IP { remote_host }
        header_up X-Forwarded-Proto { scheme }
    }
}

# Example: Jackett
# key request: jackett.your-domain.com
jackett.localhost, localhost:9117 {
    # Security Headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=()"
        Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline'; frame-ancestors 'self'; object-src 'none';"
        -Server
        -X-Powered-By
    }

    # Performance
    @compressible {
        path *.js *.css *.html *.json *.xml *.txt *.svg *.md *.yaml *.yml
    }
    encode zstd gzip @compressible
    
    @static {
        file
        path *.ico *.css *.js *.gif *.jpg *.jpeg *.png *.svg *.woff *.woff2
    }
    header @static Cache-Control "public, max-age=31536000"

    # Common Log
    log {
        format json
        output stdout
    }

    reverse_proxy jackett:9117 {
        # Robust proxy settings
        header_up X-Real-IP { remote_host }
        header_up X-Forwarded-Proto { scheme }
    }
}

# Example: Static Site / Fallback
# key request: www.your-domain.com
localhost {
    # Security Headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=()"
        Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline'; frame-ancestors 'self'; object-src 'none';"
        -Server
        -X-Powered-By
    }

    # Performance
    @compressible {
        path *.js *.css *.html *.json *.xml *.txt *.svg *.md *.yaml *.yml
    }
    encode zstd gzip @compressible
    
    @static {
        file
        path *.ico *.css *.js *.gif *.jpg *.jpeg *.png *.svg *.woff *.woff2
    }
    header @static Cache-Control "public, max-age=31536000"

    # Common Log
    log {
        format json
        output stdout
    }
    
    root * /usr/share/caddy
    file_server
    
    handle_errors {
        respond "{err.status_code} {err.status_text}"
    }
}
